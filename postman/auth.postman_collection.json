{
  "info": {
    "name": "go-gin-clean-starter - Auth (Face)",
    "_postman_id": "auth-face-collection",
    "description": "Auth endpoints including face login/enroll/person/photo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Login by Face",
      "request": {
        "method": "POST",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "image", "type": "file", "src": "<path-to-file>/albar_search.jpg" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/api/auth/login-face", "host": ["{{baseUrl}}"], "path": ["api","auth","login-face"] }
      }
    },
    {
      "name": "Enroll Face",
      "request": {
        "method": "POST",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "image", "type": "file", "src": "<path-to-file>/albar.jpg" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/api/auth/enroll-face?name=<person-name>", "host": ["{{baseUrl}}"], "path": ["api","auth","enroll-face"], "query": [ { "key": "name", "value": "<person-name>" } ] }
      }
    },
    {
      "name": "Get Person",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/auth/person/:name", "host": ["{{baseUrl}}"], "path": ["api","auth","person",":name"] }
      }
    },
    {
      "name": "Get Photo",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/auth/photo/:id", "host": ["{{baseUrl}}"], "path": ["api","auth","photo",":id"] }
      }
    }
  ]
}
